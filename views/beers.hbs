<h1>Beers</h1>


  <div class="container">
    <div class='row'>
        {{#each beersArr}}
            <div class="card theBeer" style="width: 18rem;">
                <img src={{this.image_url}} class="card-img-top" alt={{this.name}}>
                 <div class="card-body">
                    <h3 class="card-title">{{this.name}}</h5>
                    <h5 class="card-text">{{this.tagline}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    
                </div>
            </div>
         {{/each}}     
    </div>
</div>

