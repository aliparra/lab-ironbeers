<div class="beers">
  <h1>Random beers</h1>
   <div class="container">
    <div class='row'>
        {{#each selectedBeer}}
            <div class="card theBeer" style="width: 18rem;">
                <img src={{this.image_url}} class="card-img-top" alt={{this.name}}>
                 <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <h5 class="card-text">{{this.tagline}}</h5>
                </div>
            </div>
         {{/each}}     
    </div>
</div>