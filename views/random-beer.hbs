<div class="beers">
  <h1>Random beers</h1>
   <div class="container">
    <div class='row'>
        {{#each selectedBeer}}
            <div class="card theBeer" style="width: 18rem;">
                <img src={{this.image_url}} class="card-img-top" alt={{this.name}}>
                 <div class="card-body">
                    {{> beerpartial}}
                    <h4>Food Pairing</h4>
                    <p class="card-text">{{this.food_pairing}}</p>
                    <h4>Brewer Tips</h4>
                    <p class="card-text">{{brewers_tips}}</p>
                </div>
            </div>
         {{/each}}     
    </div>
</div>